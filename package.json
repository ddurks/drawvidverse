{
  "name": "drawvidverse",
  "version": "1.0.0",
  "private": true,
  "description": "Reusable scale-to-zero multiplayer backend monorepo",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "dev:worldserver": "npm run dev --workspace=drawvid-worldserver",
    "dev:matchmaker": "npm run dev --workspace=drawvid-matchmaker",
    "deploy:matchmaker": "npm run deploy --workspace=drawvid-matchmaker"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@aws-sdk/client-secrets-manager": "^3.975.0",
    "ws": "^8.19.0"
  }
}
